<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#283240"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    tools:layout_editor_absoluteX="-130dp"
    tools:layout_editor_absoluteY="1dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="46dp"
        android:src="@drawable/disney"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollViewSlider"
        android:layout_width="360dp"
        android:layout_height="133dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/cardViewPixar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewStar"
        android:layout_width="112dp"
        android:layout_height="55dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="22dp"
        app:cardBackgroundColor="#525260"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewMarvel">

        <ImageButton
            android:id="@+id/customButtonStar"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Button Image"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/star" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDisney"
        android:layout_width="112dp"
        android:layout_height="55dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#525260"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollViewSlider">

        <ImageButton
            android:id="@+id/customButtonDisney"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Button Image"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/disney" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewMarvel"
        android:layout_width="112dp"
        android:layout_height="55dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="22dp"
        app:cardBackgroundColor="#525260"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollViewSlider">

        <ImageButton
            android:id="@+id/customButtonMarvel"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Button Image"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/marvel" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewPixar"
        android:layout_width="112dp"
        android:layout_height="55dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#525260"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardViewNatGeo"
        app:layout_constraintEnd_toStartOf="@+id/cardViewMarvel"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cardViewDisney">

        <ImageButton
            android:id="@+id/customButton2"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Button Image"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/pixar" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewNatGeo"
        android:layout_width="112dp"
        android:layout_height="55dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#525260"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewNews"
        app:layout_constraintEnd_toStartOf="@+id/cardViewStar"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toEndOf="@+id/cardViewStarWars">

        <ImageButton
            android:id="@+id/customButton7"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Button Image"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/natgeo" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewStarWars"
        android:layout_width="112dp"
        android:layout_height="55dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#525260"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewMarvel">

        <ImageButton
            android:id="@+id/customButton4"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Button Image"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/starwars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nouveau sur Ralugan +"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewStarWars" />

</androidx.constraintlayout.widget.ConstraintLayout>